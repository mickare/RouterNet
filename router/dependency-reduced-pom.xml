<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>parent</artifactId>
    <groupId>de.rennschnitzel.net</groupId>
    <version>0.0.1-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>router</artifactId>
  <name>RS-Net-router</name>
  <build>
    <resources>
      <resource>
        <targetPath>.</targetPath>
        <filtering>true</filtering>
        <directory>${basedir}/src/main/resources</directory>
        <includes>
          <include>*.yml</include>
          <include>*.properties</include>
        </includes>
      </resource>
    </resources>
    <finalName>${project.name}</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.5</version>
        <configuration>
          <source>${jdk.version}</source>
          <target>${jdk.version}</target>
          <archive>
            <manifest>
              <mainClass>de.rennschnitzel.net.router.Main</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-eclipse-plugin</artifactId>
        <configuration>
          <downloadSources>true</downloadSources>
          <downloadJavadocs>true</downloadJavadocs>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.2</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <includes>
                  <include>io.netty:*</include>
                  <include>com.google.guava:*</include>
                  <include>com.google.code.gson:*</include>
                  <include>com.zaxxer:*</include>
                  <include>jline:*</include>
                  <include>org.slf4j:*</include>
                  <include>org.projectlombok:*</include>
                  <include>de.rennschnitzel:*</include>
                  <include>mysql:*</include>
                  <include>org.jooq:*</include>
                  <include>org.javassist:javassist:*</include>
                </includes>
              </artifactSet>
              <transformers>
                <transformer>
                  <mainClass>de.rennschnitzel.net.router.Main</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>rs-protected</id>
      <name>Rennschnitzel Protected Repository</name>
      <url>http://nexus.spacier.de/content/repositories/rs-protected/</url>
    </repository>
    <repository>
      <id>rs-private</id>
      <name>Rennschnitzel Private Repository</name>
      <url>http://nexus.spacier.de/content/repositories/rs-private/</url>
    </repository>
    <repository>
      <id>public</id>
      <name>Rennschnitzel Public Group</name>
      <url>http://nexus.spacier.de/content/groups/public/</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.12</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>de.rennschnitzel.net</groupId>
      <artifactId>core</artifactId>
      <version>0.0.1-SNAPSHOT</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>
  <distributionManagement>
    <repository>
      <id>rs-private</id>
      <name>Rennschnitzel Private Repository</name>
      <url>http://nexus.spacier.de/content/repositories/rs-private/</url>
    </repository>
    <snapshotRepository>
      <id>rs-private</id>
      <name>Rennschnitzel Private Repository</name>
      <url>http://nexus.spacier.de/content/repositories/rs-private/</url>
    </snapshotRepository>
  </distributionManagement>
</project>

