<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>parent</artifactId>
    <groupId>de.rennschnitzel.net</groupId>
    <version>0.0.1-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>bukkit</artifactId>
  <name>RS-Net-bukkit</name>
  <build>
    <resources>
      <resource>
        <targetPath>.</targetPath>
        <filtering>true</filtering>
        <directory>${basedir}/src/main/resources</directory>
        <includes>
          <include>*.yml</include>
        </includes>
      </resource>
    </resources>
    <finalName>${project.name}</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.5</version>
        <configuration>
          <source>${jdk.version}</source>
          <target>${jdk.version}</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-eclipse-plugin</artifactId>
        <configuration>
          <downloadSources>true</downloadSources>
          <downloadJavadocs>true</downloadJavadocs>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.4.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <includes>
                  <include>de.rennschnitzel.net:*</include>
                  <include>io.netty:*</include>
                  <include>com.google.protobuf:*</include>
                  <include>de.ruedigermoeller:fst:*</include>
                  <include>com.fasterxml.jackson.core:jackson-core:*</include>
                  <include>org.javassist:javassist:*</include>
                  <include>org.objenesis:objenesis:*</include>
                  <include>org.projectlombok:*</include>
                  <include>com.google.guava:*</include>
                </includes>
              </artifactSet>
              <relocations>
                <relocation>
                  <pattern>io.netty</pattern>
                  <shadedPattern>de.rennschnitzel.io.netty</shadedPattern>
                </relocation>
              </relocations>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>rs-protected</id>
      <name>Rennschnitzel Protected Repository</name>
      <url>http://nexus.spacier.de/content/repositories/rs-protected/</url>
    </repository>
    <repository>
      <id>public</id>
      <name>Rennschnitzel Public Group</name>
      <url>http://nexus.spacier.de/content/groups/public/</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.12</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>hamcrest-core</artifactId>
          <groupId>org.hamcrest</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.spigotmc</groupId>
      <artifactId>spigot-api</artifactId>
      <version>LATEST</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>
  <distributionManagement>
    <repository>
      <id>rs-protected</id>
      <name>Rennschnitzel Protected Repository</name>
      <url>http://nexus.spacier.de/content/repositories/rs-protected/</url>
    </repository>
    <snapshotRepository>
      <id>rs-protected</id>
      <name>Rennschnitzel Protected Repository</name>
      <url>http://nexus.spacier.de/content/repositories/rs-protected/</url>
    </snapshotRepository>
  </distributionManagement>
</project>

